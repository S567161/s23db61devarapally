extends layout

block content
  h1= title

  - let destination = `dispatch("/Wolf/create")`
  button.btn(class="btn-primary ml-1", onclick=destination) Create

  - let results1 = results

  div(class="container-fluid")
    div(class="row m-1")
      each item in results
        - let destination1 = `dispatch("/Wolf/update?id=${item._id}")`
        - let destination2 = `dispatch("/Wolf/detail?id=${item._id}")`
        - let destination3 = `dispatch("/Wolf/delete?id=${item._id}")`
        div(class="row-sm-2", class="m-1") #{item.Wolf_color}, #{item.Wolf_breed}, #{item.Wolf_price}
          button.btn(class="btn-primary ml-1", onclick=destination1) Update
          button.btn(class="btn-primary ml-1", onclick=destination2) Detail
          button.btn(class="btn-primary ml-1", onclick=destination3) Delete

  script.
    function dispatch(path){
      window.location.href = path;
    }
